{
  "compilerOptions": {
      "module": "es2022",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2022",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "include": [
      "api/**/*"
  ]
}