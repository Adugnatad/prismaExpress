{
  "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "target": "es2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },

  "include": [
      "api/**/*"
  ]
}